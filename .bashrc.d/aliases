# ~/.bashrc.d/aliases

alias ls='ls -F --color=auto'
alias ll='ls -FAlh --color=auto'
alias grep='grep --color=auto'
alias ..='cd ./..'
alias ...='cd ./../..'
alias vp='zathura '
alias vi='nvim'
alias vim='nvim'

alias pet='touch'

# git bare repos
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
